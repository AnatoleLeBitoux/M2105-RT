<h1>creation tableau</h1>*
<div>
    <input name="nombres de lignes" id="nblignes" type="number" value="<?php echo $_GET['nblignes']; ?>"/>
    <input name="nombres de colonnes" id="nbcolonnes" type="number" value="<?php echo $_GET['nbcolonnes']; ?>"/>
    <input value="Créer le tableau" type="submit"/>
</div>
<?php


function createHTMLTable ($nblignes, $nbcolonnes){
        echo "<table border='1'>";
for ($i=0 ; $i<$nblignes ; $i++){
echo"<tr>";
    for ($j=0 ; $j<$nbcolonnes ; $j++){
    echo"<td>{$i}-{$j}</td>";
    }
    echo "</tr>";
}
echo "</table>";
}



if(array_key_exists("nblignes", $_GET))
createHTMLTable ($_GET["nblignes"],$_GET["nbcolonnes"]);
//ajouter ?nblignes=5&nbcolonnes=2 pour passer en paramétres
?>

